<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.autonobarberdesktop.controller.CadastroBarbeiroController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="CADASTRO - Barbeiro" />
    <HBox prefHeight="0.0" prefWidth="200.0">
        <children>
            <Label text="Nome" />
            <TextField fx:id="txtNome" />
        </children>
    </HBox>
    <HBox prefHeight="0.0" prefWidth="200.0">
        <children>
            <Label text="Email" />
            <TextField fx:id="txtEmail" />
        </children>
    </HBox>
    <HBox prefHeight="0.0" prefWidth="200.0">
        <children>
            <Label text="Senha" />
            <TextField fx:id="txtSenha" />
        </children>
    </HBox>
    <Button mnemonicParsing="false" onAction="#cadastrarBarbeiro" text="Cadastrar" />

</VBox>
